<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:UIRemote"
             x:Class="UIRemote.SettingsPage"
             Title="Set Step Size">

    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackLayout x:Name="settingsStack1" Grid.Column="0" Padding="50,0,0,0"/>
                <StackLayout x:Name="settingsStack2" Grid.Column="2" Padding="0,0,50,0"/>
            </Grid>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
